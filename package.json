{
  "private": true,
  "workspaces": [
    "themes/*",
    "site"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "yarn workspace site run develop",
    "build": "rm -rf public && yarn workspace site run build && mv site/public/ public",
    "clean": "yarn workspace site run clean",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge",
    "release": "yarn changeset publish && git push --follow-tags"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.1",
    "@changesets/cli": "2.5.1",
    "eslint": "6.8.0",
    "eslint-plugin-shopify": "34.0.0",
    "husky": "4.2.1",
    "lint-staged": "10.0.7",
    "now": "16.7.3",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1"
  }
}
