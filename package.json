{
  "private": true,
  "workspaces": [
    "microfrontends/*",
    "themes/*",
    "site"
  ],
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "version": "changeset version && yarn run format",
    "release": "changeset publish",
    "lint": "yarn run lint:code && yarn run lint:other",
    "lint:code": "eslint . --ignore-path .gitignore",
    "lint:other": "yarn run prettier --check",
    "prettier": "prettier \"**/*.{md,mdx,css,yaml,yml}\" --ignore-path .gitignore",
    "format": "yarn run format:code && yarn run format:other",
    "format:code": "yarn run lint:code --fix",
    "format:other": "yarn run prettier --write",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "2.10.1",
    "@maiertech/eslint-config": "0.12.1",
    "@maiertech/prettier-config": "0.2.0",
    "eslint": "6.8.0",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "prettier": "2.0.5"
  }
}
