{
  "private": true,
  "name": "@undataforum/gatsby-themes",
  "description": "Gatsby themes and examples for forum websites.",
  "author": "Thilo Maier <maier@un.org>",
  "license": "MIT",
  "scripts": {
    "start": "yarn run demo",
    "clean": "yarn workspaces run clean",
    "docs": "yarn workspace @undataforum/docs start",
    "demo": "yarn workspace @undataforum/main-website-demo start",
    "lint": "eslint --ignore-path .gitignore --ext .js,.jsx .",
    "lint:fix": "yarn run lint --fix"
  },
  "workspaces": [
    "examples/*",
    "themes/*"
  ],
  "devDependencies": {
    "babel-eslint": "^9.0.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-wesbos": "^0.0.19",
    "eslint-plugin-html": "^5.0.3",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.3.0",
    "prettier": "^1.16.4"
  }
}
