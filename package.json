{
  "private": true,
  "name": "@undataforum/gatsby-themes",
  "description": "Gatsby themes and examples for forum websites.",
  "scripts": {
    "start": "yarn workspace site run develop",
    "build": "rm -rf public && yarn workspace site run build && mv site/public/ public",
    "clean": "yarn workspace site run clean",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "themes/*",
    "site"
  ],
  "devDependencies": {
    "@changesets/cli": "2.1.2",
    "eslint": "6.6.0",
    "eslint-plugin-shopify": "31.0.0",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "now": "16.4.1",
    "prettier": "1.18.2",
    "pretty-quick": "2.0.0"
  }
}
