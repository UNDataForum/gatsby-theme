{
  "private": true,
  "workspaces": [
    "microfrontends/*",
    "themes/*",
    "site"
  ],
  "scripts": {
    "start": "yarn workspace site run develop",
    "build": "rm -rf public && yarn workspace site run build && mv site/public/ public",
    "clean": "yarn workspace site run clean",
    "lint": "yarn run lint:code && yarn run lint:other",
    "lint:code": "eslint . --cache --ext .js,.jsx --ignore-path .gitignore",
    "lint:other": "yarn run prettier --check",
    "prettier": "prettier \"**/*.{md,mdx,css,yaml,yml}\" --ignore-path .gitignore",
    "format": "yarn run format:code && yarn run format:other",
    "format:code": "yarn run lint:code --fix",
    "format:other": "yarn run prettier --write",
    "release": "yarn changeset publish && git push --follow-tags",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.2.2",
    "@changesets/cli": "2.6.1",
    "eslint": "6.8.0",
    "eslint-plugin-shopify": "35.0.0",
    "husky": "4.2.3",
    "lint-staged": "10.0.8",
    "now": "17.0.4",
    "prettier": "2.0.2"
  }
}
