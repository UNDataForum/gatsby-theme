{
  "private": true,
  "name": "@undataforum/gatsby-themes",
  "description": "Gatsby themes and examples for forum websites.",
  "author": "Thilo Maier <maier@un.org>",
  "license": "MIT",
  "scripts": {
    "clean": "yarn workspaces run clean",
    "lint": "yarn workspaces run lint",
    "format": "pretty-quick"
  },
  "lint-staged": {
    "*.js": [
      "pretty-quick --staged",
      "yarn run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "workspaces": [
    "examples/*",
    "themes/*"
  ],
  "devDependencies": {
    "husky": "^2.3.0",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.7",
    "now": "^15.2.0",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0"
  }
}
