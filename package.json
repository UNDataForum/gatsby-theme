{
  "private": true,
  "name": "@undataforum/gatsby-themes",
  "description": "Gatsby themes and examples for forum websites.",
  "scripts": {
    "start": "yarn workspace site run develop",
    "clean": "yarn workspace site run clean",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "pretty-quick",
    "purge": "rm -rf ./node_modules && yarn workspaces run purge"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && lint-staged"
    }
  },
  "workspaces": [
    "themes/*",
    "site"
  ],
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-plugin-shopify": "^30.0.1",
    "husky": "^3.0.3",
    "lerna": "^3.15.0",
    "lint-staged": "^9.0.0",
    "now": "^16.1.1",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  }
}
